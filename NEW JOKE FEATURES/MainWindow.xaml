<Window x:Class="JokeFetcherWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Joke Fetcher" Height="400" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <ComboBox x:Name="CategoryBox" Margin="0,0,0,10" Height="30">
                <ComboBoxItem Content="general" IsSelected="True"/>
                <ComboBoxItem Content="programming"/>
                <ComboBoxItem Content="knock-knock"/>
            </ComboBox>

            <Button Content="একটা জোক আনো 😂" Click="FetchJoke_Click" Height="40" Margin="0,0,0,10"/>
            <Button Content="৫টা জোক আনো 🤣" Click="FetchMultipleJokes_Click" Height="40" Margin="0,0,0,10"/>
            <Button Content="জোক কপি করো 📋" Click="CopyJoke_Click" Height="40" Margin="0,0,0,10"/>

            <TextBlock x:Name="JokeText" Text="এখানে জোক দেখাবে..." TextWrapping="Wrap" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>